{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    "github>msfjarvis/shared-workflows//renovate/automerge",
  ],
  "postUpdateOptions": [
    "gomodMassage",
    "gomodTidy",
    "gomodUpdateImportPaths",
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod",
      ],
      "postUpgradeTasks": {
        "commands": ["sudo nix --extra-experimental-features nix-command --extra-experimental-features flakes --option accept-flake-config true --option sandbox false run .#gomod2nix"],
        "executionMode": "branch",
      },
    }
  ],
}
