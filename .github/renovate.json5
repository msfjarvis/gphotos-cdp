{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    "github>msfjarvis/shared-workflows//renovate/automerge",
  ],
  "postUpdateOptions": [
    "gomodMassage",
    "gomodTidy",
    "gomodUpdateImportPaths",
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*",
      ],
      "postUpgradeTasks": {
        "commands": ["nix --extra-experimental-features nix-command --extra-experimental-features flakes run github:nix-community/gomod2nix"],
        "executionMode": "branch",
      },
    }
  ],
}
